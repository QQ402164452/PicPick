<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:listDivider">@drawable/sys_list_divider</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="Popup_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_hidden_bottom_anim</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

</resources>
