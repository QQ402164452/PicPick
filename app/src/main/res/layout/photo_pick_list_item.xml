<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/PhotoPickActivity_List_Item_Bg"
    android:descendantFocusability="afterDescendants"
    >

    <ImageView
        android:id="@+id/PhotoPick_list_item_img"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/PhotoPick_list_item_isSelected_state"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/photo_pick_list_item_state_img"
        android:layout_alignRight="@id/PhotoPick_list_item_img" />



</RelativeLayout>